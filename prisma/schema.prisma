generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  nome      String
  email     String   @unique
  senha     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model Peca {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  nome       String
  categoria  String
  quantidade Int
  status     String
  descricao  String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@map("pecas")
}
